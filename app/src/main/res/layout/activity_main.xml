<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/currentSEM"
        layout="@layout/cs_course_1_semester"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/chooseCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="140dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:text="Select Major            |v"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <Button
        android:id="@+id/courseNum"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <Button
        android:id="@+id/CompScience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:text="Computer Science"
        android:focusable="true"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseCourse"
        android:visibility="gone" />

    <Button
        android:id="@+id/Managemant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:text="Management"
        android:focusable="true"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CompScience"
        android:visibility="gone" />

    <Button
        android:id="@+id/Math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/black"
        android:focusable="true"
        android:clickable="true"
        android:text="Mathematics"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Managemant"
        android:visibility="gone" />

    <Button
        android:id="@+id/semester_1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/chooseCourse"
        android:visibility="gone" />

    <Button
        android:id="@+id/semester_2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/semester_1"
        android:visibility="gone"/>

    <Button
        android:id="@+id/semester_3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/semester_2"
        android:visibility="gone"/>

    <Button
        android:id="@+id/semester_4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/semester_3"
        android:visibility="gone"/>

    <Button
        android:id="@+id/semester_5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/semester_4"
        android:visibility="gone"/>

    <Button
        android:id="@+id/semester_6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/semester_5"
        android:visibility="gone"/>

    <Button
        android:id="@+id/semester_7"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/semester_6"
        android:visibility="gone"/>

    <Button
        android:id="@+id/semester_8"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/semester_7"
        android:visibility="gone"/>

    <GridLayout
        android:id="@+id/scoreGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:layout_marginStart="15dp"
        android:columnCount="1"
        android:rowCount="5"
        android:rowOrderPreserved="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/chooseCourse"
        app:layout_constraintTop_toBottomOf="@+id/courseNum">

        <EditText
            android:id="@+id/score1"
            android:layout_row="0"
            android:layout_marginTop="0dp"
            android:autofillHints="0"
            android:background="@color/black"
            android:inputType="number"
            android:labelFor="@+id/score1"
            android:maxLength="3"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/score2"
            android:layout_row="1"
            android:layout_marginTop="20dp"
            android:autofillHints="0"
            android:background="@color/black"
            android:inputType="number"
            android:labelFor="@+id/score2"
            android:maxLength="3"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/score3"
            android:layout_row="2"
            android:layout_marginTop="20dp"
            android:autofillHints="0"
            android:background="@color/black"
            android:inputType="number"
            android:labelFor="@+id/score3"
            android:maxLength="3"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/score4"
            android:layout_row="3"
            android:layout_marginTop="20dp"
            android:autofillHints="0"
            android:background="@color/black"
            android:inputType="number"
            android:labelFor="@+id/score4"
            android:maxLength="3"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/score5"
            android:layout_row="4"
            android:layout_marginTop="20dp"
            android:autofillHints="0"
            android:background="@color/black"
            android:inputType="number"
            android:labelFor="@+id/score5"
            android:maxLength="3"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

    </GridLayout>

    <GridLayout
        android:id="@+id/showGpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:columnCount="2"
        android:rowCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/Gpatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="GPA:"
            android:textColor="@color/black"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/Gpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="70sp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
